;; Yellow and magenta are swapped to show keys in yellow.
(setf *colors*
      '("black" "red" "green" "magenta" "blue" "yellow" "cyan" "white"))
(update-color-map (current-screen))

(defmacro my-stump-set-color (val color)
  "Similar to `set-any-color', but without updating colors."
  `(dolist (s *screen-list*)
     (setf (,val s) (alloc-color s ,color))))

(my-stump-set-color screen-fg-color "DarkSeaGreen")
(my-stump-set-color screen-bg-color "gray15")
(my-stump-set-color screen-focus-color  "DarkGreen")
(my-stump-set-color screen-border-color "DarkGreen")
(my-stump-set-color screen-float-focus-color "ForestGreen")
(my-stump-set-color screen-float-unfocus-color "gray15")
(update-colors-all-screens)
