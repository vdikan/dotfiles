;;
;; prompt the user for an interactive command. The first arg is an
;; optional initial contents.
(defcommand colon1 (&optional (initial "")) (:rest)
  (let ((cmd (read-one-line (current-screen) ": " :initial-input initial)))
    (when cmd
      (eval-command cmd t))))
;;
;; Adjust brightness
(define-key *root-map* (kbd "M-b") "colon1 exec xbacklight -set ")
;;
;; Browse somewhere
(define-key *root-map* (kbd "o") "colon1 exec chromium-browser http://www.")
;;
;; Web Jumps (for search engines)
(defmacro make-web-jump (name prefix)
  `(defcommand ,(intern name) (search) ((:rest ,(concatenate 'string name " query: ")))
    (substitute #\+ #\Space search)
    (run-shell-command (concatenate 'string "chromium-browser " ,prefix search))))

(make-web-jump "google-search"    "http://www.google.ru/search?q=")
(make-web-jump "academia-search"  "http://www.google.ru/scholar?q=")
(make-web-jump "libgen-search"    "https://libgen.pw/search?q=")
(make-web-jump "yandex-search"    "http://yandex.ru/search/?text=")
(make-web-jump "video-search"     "http://www.youtube.com/results?search_query=")
(make-web-jump "imdb-search"      "http://www.imdb.com/find?q=")
(make-web-jump "kinopoisk-search" "http://www.kinopoisk.ru/index.php/kp_query=")
(make-web-jump "rutracker-search" "http://www.rutracker.org/forum/tracker.php?nm=")
(make-web-jump "picture-search"   "http://www.yandex.ru/images/search/?text=")

(defvar *web-search-bindings*
  (let ((m (make-sparse-keymap)))
    (define-key m (kbd "/") "google-search")
    (define-key m (kbd "g") "google-search")
    (define-key m (kbd "a") "academia-search")
    (define-key m (kbd "l") "libgen-search")
    (define-key m (kbd "y") "yandex-search")
    (define-key m (kbd "v") "video-search")
    (define-key m (kbd "i") "imdb-search")
    (define-key m (kbd "k") "kinopoisk-search")
    (define-key m (kbd "t") "rutracker-search")
    (define-key m (kbd "p") "picture-search")
    m ; NOTE: this is important
  ))

(define-key *root-map* (kbd "C-/") '*web-search-bindings*)
(define-key *root-map* (kbd "/")   '*web-search-bindings*)

